{
    "name": "SPTE",
    "description": "Affiche quelques erreurs sur les traductions fran√ßaises WordPress",
    "version": "1.0.0.5",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
	},
	"permissions": ["storage", "tabs"],
	"background": {
		"scripts": ["background.js"]
	},
	"page_action": {
		"default_title": "SPTE",
		"default_popup": "pageAction/index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"show_matches": ["https://translate.wordpress.org/*"]
	},
	"content_scripts": [{
		"matches": ["https://translate.wordpress.org/*"],
		"css": ["style.css"],
		"js": ["data.js", "regex.js", "styles.js", "helpers.js", "spte.js"]
	}]
}